{
    "mcpServers": {
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git",
                "--repository",
                "path/to/git/repo"
            ],
            "disabled": true
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
            }
        },
        "time": {
            "command": "uvx",
            "args": [
                "mcp-server-time"
            ],
            "disabled": true
        },
        "excel": {
            "command": "uvx",
            "args": [
                "excel-mcp-server",
                "stdio"
            ]
        },
        "docker": {
            "command": "uvx",
            "args": [
                "docker-mcp"
            ]
        },
        "everything-search": {
            "command": "uvx",
            "args": [
                "mcp-server-everything-search"
            ],
            "disabled": true
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {
                "DEFAULT_MINIMUM_TOKENS": "6000"
            }
        },
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {
                "MEMORY_FILE_PATH": "/path/to/custom/memory.json"
            }
        }
    }
}